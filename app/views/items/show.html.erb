<DOCUTYPE html>
<head>
  <title><%= @item.title %>-monolist</title>
  <meta name=”description” content="プロフィールページです。">
</head>
<body>
  <div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% if @item.large_image.present? %>
          <%= image_tag(@item.large_image) %>
          <% else %>
          <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% @haves.each do |h| %>
          <%= link_to(gravatar_for(h), user_path(h)) %>
          <% end %>
          </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% @wants.each do |w| %>
          <%= link_to(gravatar_for(w), user_path(w)) %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO %>
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), item_path) %>
      </div>
    </div>
  </div>
</div>
</body>
</html>
